{
  "dashboard": {
    "title": "PerpBot V2 - Main Dashboard",
    "tags": ["perpbot", "trading", "arbitrage"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "perpbot_system_health",
            "legendFormat": "Health Score"
          }
        ]
      },
      {
        "id": 2,
        "title": "Active Positions",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "perpbot_active_positions_total",
            "legendFormat": "Positions"
          }
        ]
      },
      {
        "id": 3,
        "title": "Total PnL (USDT)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "perpbot_pnl_total_usdt",
            "legendFormat": "PnL"
          }
        ]
      },
      {
        "id": 4,
        "title": "Capital Utilization",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "perpbot_capital_utilization_percent",
            "legendFormat": "Utilization %"
          }
        ]
      },
      {
        "id": 5,
        "title": "Order Execution Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(perpbot_order_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(perpbot_order_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(perpbot_order_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ]
      },
      {
        "id": 6,
        "title": "WebSocket Latency (ms)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "perpbot_websocket_latency_ms",
            "legendFormat": "{{exchange}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Arbitrage Opportunities Found",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(perpbot_arbitrage_opportunities_total[5m])",
            "legendFormat": "Opportunities/sec"
          }
        ]
      },
      {
        "id": 8,
        "title": "Order Success Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(perpbot_orders_success_total[5m]) / rate(perpbot_orders_total[5m]) * 100",
            "legendFormat": "Success %"
          }
        ]
      },
      {
        "id": 9,
        "title": "Exchange Connection Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "perpbot_exchange_connected",
            "legendFormat": "{{exchange}}",
            "format": "table"
          }
        ]
      }
    ],
    "schemaVersion": 16,
    "version": 0
  }
}
