# PerpBot V2 Environment Variables Template
# Copy this file to .env and fill in your credentials

# ===========================================
# General Settings
# ===========================================
ENVIRONMENT=production
LOG_LEVEL=INFO
TZ=UTC

# ===========================================
# OKX Exchange
# ===========================================
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_ENV=testnet

# ===========================================
# Paradex Exchange (Starknet)
# ===========================================
PARADEX_L2_PRIVATE_KEY=your_paradex_l2_private_key_here
PARADEX_ACCOUNT_ADDRESS=your_paradex_account_address_here
PARADEX_ENV=testnet

# ===========================================
# Hyperliquid Exchange
# ===========================================
HYPERLIQUID_ACCOUNT_ADDRESS=your_hyperliquid_account_address_here
HYPERLIQUID_PRIVATE_KEY=your_hyperliquid_private_key_here
HYPERLIQUID_ENV=testnet

# ===========================================
# Telegram Notifications (Optional)
# ===========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=false

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# Trading Parameters
# ===========================================
INITIAL_CAPITAL_USDT=1000
MAX_POSITION_SIZE_USDT=100
MIN_PROFIT_BPS=10

# ===========================================
# Risk Management
# ===========================================
MAX_DAILY_LOSS_USDT=50
MAX_DRAWDOWN_PERCENT=5
